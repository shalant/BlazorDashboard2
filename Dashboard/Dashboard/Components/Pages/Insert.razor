<MudContainer>
<h3>Live Data</h3>
    <MudTabs Elevation="4" Rounded="true" Color="@MudBlazor.Color.Primary">
    <MudTabPanel Text="AI Usage">
            <MudItem xs="12" sm="6">
                <MudCard>
                    <MudCardHeader>
                        <MudText>State AI Usage Info</MudText>
                    </MudCardHeader>
                    <MudCardContent>
