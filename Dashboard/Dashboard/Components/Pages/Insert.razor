                </MudCard>
            </MudItem>

            <MudTable Elevation="25" Items="AiUsageList" Filter="new Func<AiUsage, bool>(Search)" @bind-aiUsage="aiUsage">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Ai Usage</MudText>
        <MudToolBarSpacer />
        <MudTextField @bind-Value="searchString" Placeholder="Search for Ai Usage..." Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="MudBlazor.Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>State Name</MudTh>
        <MudTh>Usage</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@aiUsage.StateName</MudTd>
                    <MudTd DataLabel="Usage">@aiUsage.Usage</MudTd>
        <MudTd DataLabel="">
                        <MudFab @onclick="@(()=>Edit(aiUsage.Id))" Color="MudBlazor.Color.Primary" Icon="@Icons.Material.Filled.Edit" Size="MudBlazor.Size.Small" IconSize="MudBlazor.Size.Small" />
                        <MudFab @onclick="@(()=>Delete(aiUsage.Id))" Color="MudBlazor.Color.Secondary" Icon="@Icons.Material.Filled.Delete" Size="MudBlazor.Size.Small" IconSize="MudBlazor.Size.Small" />
        </MudTd>
    </RowTemplate>
</MudTable>

